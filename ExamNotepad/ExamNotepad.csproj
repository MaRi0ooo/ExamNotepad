<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <StartupObject>ExamNotepad.App</StartupObject>
    <UseWindowsForms>True</UseWindowsForms>
    <ApplicationIcon>src\logo.ico</ApplicationIcon>
    <PackageIcon>logo.png</PackageIcon>
    <NeutralLanguage>en</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="logo.ico" />
    <None Remove="mainlogo.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="src\logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FinalEngine.UI.SyntaxBox" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="logo.ico" />
    <Resource Include="mainlogo.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="src\logo.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
